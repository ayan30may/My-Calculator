<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Calculate"
        android:id="@+id/calculator_text"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#00fa9a"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculator_text"
        android:id="@+id/input_text"
        android:layout_marginTop="20dp"
        android:textAlignment="textEnd"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@id/input_text"
        android:id="@+id/btn_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_below="@+id/input_text"
        android:layout_toRightOf="@+id/btn_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/btn_2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_below="@+id/input_text"
        android:layout_toRightOf="@+id/btn_2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/btn_3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_below="@+id/input_text"
        android:layout_toRightOf="@+id/btn_3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:id="@+id/btn_add"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@+id/btn_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_4"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_below="@+id/btn_2"
        android:layout_toRightOf="@+id/btn_4"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_below="@+id/btn_3"
        android:layout_toRightOf="@+id/btn_5"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_6"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@+id/btn_add"
        android:layout_toRightOf="@+id/btn_6"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/btn_sub"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_below="@+id/btn_4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_7"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_below="@+id/btn_5"
        android:layout_toRightOf="@+id/btn_7"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_8"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_below="@+id/btn_6"
        android:layout_toRightOf="@+id/btn_8"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_9"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:layout_below="@+id/btn_sub"
        android:layout_toRightOf="@+id/btn_9"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/btn_mul"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:layout_below="@+id/btn_7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_dot"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@+id/btn_8"
        android:layout_toRightOf="@+id/btn_dot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_0"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_below="@+id/btn_9"
        android:layout_toRightOf="@+id/btn_0"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_equal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_below="@+id/btn_mul"
        android:layout_toRightOf="@+id/btn_equal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/btn_div"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/btn_clear"
        android:layout_below="@+id/btn_0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="del"
        android:id="@+id/btn_delete"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_equal"
        android:layout_marginLeft="200dp"/>

</RelativeLayout>